{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Strict Type Checking */
    "strict": true,
    "skipLibCheck": true,

    /* Project Structure */
    "rootDir": "src",
    "outDir": "dist",

    /* Experimental */
    "resolveJsonModule": true
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "dist"]
}
